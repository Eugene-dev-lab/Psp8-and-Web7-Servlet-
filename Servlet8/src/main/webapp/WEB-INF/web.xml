<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <servlet>
    <display-name>Login</display-name>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.example.servlets.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>RegistrationServlet</display-name>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.example.servlets.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>AddTourServlet</display-name>
    <servlet-name>AddTourServlet</servlet-name>
    <servlet-class>com.example.servlets.AddTourServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddTourServlet</servlet-name>
    <url-pattern>/addTour</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>UserViewCardServlet</display-name>
    <servlet-name>UserViewCardServlet</servlet-name>
    <servlet-class>com.example.servlets.UserViewCardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserViewCardServlet</servlet-name>
    <url-pattern>/userViewCard</url-pattern>
  </servlet-mapping>
</web-app>
